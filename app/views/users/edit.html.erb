<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit the Profile</h3>
        <%= simple_form_for @user do |f| %>
          <%= f.input :name %>
          <%= f.input :photo_url %>
          <%= f.input :bio %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
