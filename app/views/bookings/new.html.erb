<h1>Book: <%= @lesson.name %></h1>


<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <%= simple_form_for [@lesson, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :start_time %>
          <%= f.submit "Save Booking", class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
