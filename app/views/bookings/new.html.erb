<h1>Book the <%= @lesson.name %> class</h1>


<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new lesson</h3>
        <%= simple_form_for [@lesson, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :start_time %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
