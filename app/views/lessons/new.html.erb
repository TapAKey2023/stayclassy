<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new lesson</h3>
        <%= simple_form_for @lesson do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.input :description %>
          <%= f.input :category, :collection => %w[Culinary Academics Film Pets Fitness Sports] %>
          <%= f.input :total_price %>
          <%= f.input :duration %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
