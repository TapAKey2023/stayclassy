<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-4 mx-auto">
          <h1><%= @lesson.name %></h1>
          <div class="container margin-top-negative">
          <div class="user-card-image row d-lg-inline-flex" style="width: 18rem;">
          <div class="card" style="width: 18rem;">

            <p>Name: <%= @lesson.name %></p>
            <p>Description: <%= @lesson.description %></p>
            <p>Category: <%= @lesson.category %></p>
            <p>Total price: Â£<%= @lesson.total_price %></p>
            <p>Duration (hour): <%= @lesson.duration %></p>

          </div>
          </div>
          </div>

          <p> Taught by <%= @lesson.user.name%></p>
            <% if current_user != @lesson.user %>
            <button class="book-button" id="booking-button">
            <%= link_to "Booking to this class", new_lesson_booking_path(@lesson) %>
            </button>
            <% raise %>
            <% end %>

        </div>

            <% if current_user == @lesson.user %>
            <%= link_to "edit this lesson", edit_lesson_path(@lesson)%>
            <%= link_to "delete this lesson", lesson_path(@lesson), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this class?" } %>
            <% end %>
    </div>
</div>


<div class="container margin-top-negative">
  <h3> Other Classes you may like...</h3>
  <div class="card-grid">
      <% @other_lessons.each do |lesson| %>
       <div class="card">
          <%= link_to lesson_path(lesson), class:"text-decoration-none card-class" do %>
              <div class="card-class-infos">
                <h3><%= lesson.name %></h3>
              </div>
          <% end %>
      </div>
      <% end %>
  </div>
</div>
