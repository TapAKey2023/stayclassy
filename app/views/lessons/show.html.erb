<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpg') %>)">
    <h1><%= @class.name %></h1>
  </div>
  <span class="class-tag"><%= pluralize(@lessons.size, "class") %></span>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any classes yet!" if @lessons.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_booking_modal">
        add a class
      </button>
      <%= link_to "delete this lesson", lesson_path(@lesson), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this class?" } %>
    </div>
  </div>
  <div class="row my-2">
    <% @lessons.each do |lesson| %>
      <% booking = Booking.find_by(lesson: @lesson, user: user) %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= lesson.name %> <span class="text-muted font-weight-normal"><i class="fas fa-star star-yellow"></i></span></strong>
            <small class="text-muted"></small>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
