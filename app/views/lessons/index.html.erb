<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Classes</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">All Classes available</h3>
    <%= link_to "Create a Class", new_lesson_path, class: "btn btn-flat" %>
  </div>
  <div class="card-grid">
      <% @lessons.each do |lesson| %>
      <div class="card">
          <%= link_to lesson_path(lesson), class:"text-decoration-none card-class" do %>


              <div class="card-class-infos">
                <h3><%= lesson.name %></h3>
              </div>
          <% end %>
      </div>
      <% end %>
  </div>
</div>



